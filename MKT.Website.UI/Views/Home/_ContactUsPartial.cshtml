                    <div class="mb-3">
                            <input type="text" name="replyto" class="form-control form-control-lg" placeholder="@_localization.Getkey("str_contact_formemail")" dir=@_localization.Getkey("lang_dir")>
                    </div>
                    <div class="mb-3">
                            <textarea rows="4" name="message" class="form-control form-control-lg" placeholder="@_localization.Getkey("str_contact_msg")" dir=@_localization.Getkey("lang_dir")></textarea>
                    </div>
                        <button id="my-form-button" class="btn btn-primary btn-block btn-lg pt-3 pb-3 float-right" title="Send Now" style="background-color:rgb(0, 84, 166)" dir=@_localization.Getkey("lang_dir")>
