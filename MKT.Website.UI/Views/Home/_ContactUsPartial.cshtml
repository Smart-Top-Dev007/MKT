@model Person
@{
    Layout = "~/Views/Shared/_Client.cshtml";
    ViewData["Title"] = "إتصل بنا";
}
<div id="contactus" class="my-5 py-5"></div>
<div >
<section id="contact">
     <div class="container py-5">
        <div class="row">
           <div class="col-12 col-md-6 mb-3">
                    <div class="text-light pb-5" dir=@_localization.Getkey("lang_dir")>
                        <h1 class="text-light" dir=@_localization.Getkey("lang_dir")>@_localization.Getkey("str_contact_title")</h1>
                        <p class="lead" dir=@_localization.Getkey("lang_dir")>@_localization.Getkey("str_contact_title2")</p>
                        <div class=" border-bottom border-5" style="width: 100px; "> </div>
                    </div>
                    <form asp-action="Create" asp-controller="Funnel" method="post" class="  p-5 pt-4 px-3 rounded-2" style="background-color:rgb(152 193 232 / 60%)">
                        
                        <div class="mb-3 ">
                            <input asp-for="PersonName" type="text" required class="form-control py-3" placeholder="@_localization.Getkey("str_contact_name")" dir=@_localization.Getkey("lang_dir") />
                            <span asp-validation-for="PersonName" class="text-danger d-block mt-1"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="PersonPhone" type="tel" required class="form-control py-3" placeholder="@_localization.Getkey("str_contact_phoneNo")" dir=@_localization.Getkey("lang_dir") />
                            <span asp-validation-for="PersonPhone" class="text-danger d-block mt-1"></span>

                        </div>
                        <div class="mb-3">
                            <input asp-for="PersonEmail" type="email" required class="form-control py-3" placeholder="@_localization.Getkey("str_contact_formemail")" dir=@_localization.Getkey("lang_dir") />
                            <span asp-validation-for="PersonEmail" class="text-danger d-block mt-1 "></span>

                        </div>

                        <div class="form-group terms mb-3">

                            <label class="container_check fs-5">
                                <input type="checkbox" asp-for="PersonSubscription" checked name="PersonSubscription" id="agree">

                                @_localization.Getkey("str_contact_accept") <a href="#" data-bs-toggle="modal" data-bs-target="#terms-txt">@_localization.Getkey("str_contact_join")</a>.
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="form-group pb-5">
                               <button id="my-form-button" type="submit" class="btn btn-primary btn-block btn-lg pt-3 pb-3 float-right" title="Send Now" style="background-color:rgb(0, 84, 166)" dir=@_localization.Getkey("lang_dir")>
                            @_localization.Getkey("str_contact_btn") 
                        </button>
                        </div>

                </form>
           </div>

           <div class="col-12 col-md-6  contact">
                    <div class="panel header_2 center rounded-2">
                            <figure class="add_bottom_30">
                                <a href="#">
                                    <img src="~/img/TechNexus/TechNexus-MKT-App.svg" width="100%" height="100%" alt="">
                                </a>
                            </figure>


                             <div class="text-center">
                            <h1 dir=@_localization.Getkey("lang_dir")>@_localization.Getkey("str_contact_welcome")</h1>


                                 <br />
                                 <br />
                            <P dir=@_localization.Getkey("lang_dir")>@_localization.Getkey("str_contact_content")</P>

                                <hr />

                                <br />


                                <br />
                            <p dir=@_localization.Getkey("lang_dir")>
                                @_localization.Getkey("str_contact_phone")
                                    <span>

                                    <a href="tel:0097126276897" dir=@_localization.Getkey("lang_dir")>0097126276897</a>
                                    </span>
                                </p>
                            <p dir=@_localization.Getkey("lang_dir")>
                                    @_localization.Getkey("str_contact_mobile")                            
                                    <span>

                                    <a href="tel:00971507746099" dir=@_localization.Getkey("lang_dir")>00971507746099</a>
                                    </span>
                                </p>
                            <p dir=@_localization.Getkey("lang_dir")>
                                @_localization.Getkey("str_contact_whatsapp")
                                    <span>
                                        <a href="https://wa.me/971507746099?text=مرحباً %20" dir=@_localization.Getkey("lang_dir") target="_blank">00971507746099</a>

                                    </span>
                                </p>

                            <p dir=@_localization.Getkey("lang_dir")>@_localization.Getkey("str_contact_ourmail") <span><a href="mailto:info@technexus.ae" dir=@_localization.Getkey("lang_dir")>info@technexus.ae</a></span></p>


                            </div>
                   </div>
           </div>
        </div>
    </div>
</section>
</div>

 

