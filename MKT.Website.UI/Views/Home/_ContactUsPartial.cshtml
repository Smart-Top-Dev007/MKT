}
<div id="contactus" class="my-5 py-5"></div>
<div >
<section id="contact">
     <div class="container py-5">
        <div class="row">
           <div class="col-12 col-md-6 mb-3">
                <form  action="https://formspree.io/f/xlezwagr" method="post">
                        <div class="text-light pb-5" dir=@_localization.Getkey("lang_dir")>
