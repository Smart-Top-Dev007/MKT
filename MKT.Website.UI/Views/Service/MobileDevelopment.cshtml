
@{
    ViewData["Title"] = @_localization.Getkey("str-mobile-title");
    Layout = "~/Views/Shared/_Master.cshtml";
}


<br />
<br />
<br />
<div dir=@_localization.Getkey("lang_dir")>
    <div class="p-5">

    <div class="my-2">
        <div class="pe-2">
                <div class="border bg-light p-5">
                    <span class="card-img py-5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-app-indicator icon-resized" viewBox="0 0 16 16" style="fill:#0054A6;width:70px;height:70px; cursor: pointer;">
                            <path d="M5.5 2A3.5 3.5 0 0 0 2 5.5v5A3.5 3.5 0 0 0 5.5 14h5a3.5 3.5 0 0 0 3.5-3.5V8a.5.5 0 0 1 1 0v2.5a4.5 4.5 0 0 1-4.5 4.5h-5A4.5 4.5 0 0 1 1 10.5v-5A4.5 4.5 0 0 1 5.5 1H8a.5.5 0 0 1 0 1H5.5z"></path>
                            <path d="M16 3a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                        </svg>
                    </span>
                    <div class="card-body py-2 px-3">
                        <h1 class="card-title mt-3 text-uppercase" style="color:#0054A6; cursor: pointer;">@_localization.Getkey("str-mobile-title")</h1>
                        <p class="card-text mt-4 pb-2">@_localization.Getkey("str-mobile-content")</p>
                    </div>
                    <a asp-controller="Home" asp-action="ContactUs" dir=@_localization.Getkey("lang_dir") class="text-light btn btn-primary me-1 p-3 text-capitalize lift fs-4" style="background-color: rgb(0, 84, 166)!important;">
                        @_localization.Getkey("str-start-now")   &nbsp;  <i class="fa-solid fa-arrow-left text-light d-none d-md-inline ms-2"></i>
                    </a>
                </div>
        </div>
    </div>
    </div>

    <Partial name="~/Views/Home/_ContactUsPartial.cshtml" />
</div>