@model IEnumerable<Company>;

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
       
            <th>
                Display Order
            </th>
                 <th>
                Company Name
            </th>
            <th></th>
                <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
            
                <td width="30%">
                    @obj.Id
                </td>
                        <td width="50%">
                    @obj.CompanyName
                    </td>
                    <td width="10%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td width="10%">
                      <td>
                            <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id"
                                class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                                </div>
                        </td>
            </tr>
        }
    </tbody>
</table>
</div>